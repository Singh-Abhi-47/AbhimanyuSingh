#Check -1
name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # Set this to your default branch (main or master)

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'  # Specify the version of Node.js you want

    - name: Install dependencies
      run: npm install  # Use this if you have dependencies to install

    - name: Build
      run: npm run build  # Run the build command if necessary

    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./  # Change this if your index.html is in a subfolder
